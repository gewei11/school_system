.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  min-height: 100vh;
}

.tabs {
  display: flex;
  width: 100%;
  justify-content: space-around;
  background-color: #f7f7f7;
  padding: 10rpx 0;
}

.tab {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  color: #888;
}

.tab.active {
  font-weight: bold;
  color: #ffcc00;
  border-bottom: 4rpx solid #ffcc00;
}

.messages {
  flex: 1;
  width: 90%;
  padding: 20rpx;
}

.message {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.message-info {
  flex: 1;
}

.username {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 5rpx;
}

.last-message {
  font-size: 28rpx;
  color: #555;
}

.message-time {
  font-size: 24rpx;
  color: #888;
}

.empty {
  text-align: center;
  margin-top: 50rpx;
  color: #888;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
}
