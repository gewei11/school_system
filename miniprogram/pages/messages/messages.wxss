.container {
  padding: 20rpx;
}

.tabs {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.tab {
  padding: 10rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.tab.active {
  color: #007aff;
  border-bottom: 2rpx solid #007aff;
}

.messages {
  margin-top: 20rpx;
}

.message {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.message-info {
  flex: 1;
}

.username {
  font-weight: bold;
  font-size: 30rpx;
}

.last-message {
  font-size: 28rpx;
  color: #999;
}

.message-time {
  font-size: 26rpx;
  color: #bbb;
}

.empty {
  text-align: center;
  margin-top: 100rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #bbb;
}
