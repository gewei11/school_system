/* 容器样式 */
.container {
  padding: 10px;
  background-color: #f5f5f5;
}

/* 文章详情 */
.post-detail {
  padding: 10px;
  border-radius: 5px;
  background-color: #fff;
  margin-bottom: 15px;
}

.post-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 10px;
}

.header-info {
  flex: 1;
}

.username {
  font-weight: bold;
  color: #333;
  font-size: 16px;
}

.timestamp {
  font-size: 12px;
  color: #888;
}

.post-content {
  margin-top: 10px;
  font-size: 16px;
  color: #000;
}

.post-stats {
  margin-top: 10px;
  font-size: 14px;
  color: #555;
}

.post-images {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}

.post-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
}

/* 点赞功能 */
.post-likes {
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.like-button {
  background-color: #007aff;
  color: white;
  padding: 5px 15px;
  border-radius: 5px;
  font-size: 14px;
  margin-right: 10px;
}

.like-count {
  font-size: 14px;
  color: #555;
}

/* 评论区 */
.comments-section {
  padding: 10px;
  border-radius: 5px;
  background-color: #fff;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.comment-item {
  display: flex;
  padding: 8px 0;
  border-bottom: 1px solid #ddd;
  align-items: center;
}

.comment-avatar {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin-right: 10px;
}

.comment-info {
  flex: 1;
}

.comment-username {
  font-weight: bold;
  color: #333;
  font-size: 14px;
}

.comment-content {
  margin-top: 5px;
  font-size: 14px;
  color: #555;
}

.comment-time {
  font-size: 12px;
  color: #888;
  margin-top: 5px;
}

.no-comments {
  text-align: center;
  color: #888;
  margin-top: 10px;
}

/* 大拇指点赞按钮 */
.like-thumb {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.thumb-button {
  background-color: transparent;
  border: none;
  font-size: 20px;
  color: #007aff;
  margin-right: 5px;
}

.thumb-count {
  font-size: 14px;
  color: #555;
}

/* 添加评论文本框 */
.add-comment {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.comment-input {
  width: 100%;
  height: 80px;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ddd;
  margin-bottom: 10px;
  font-size: 14px;
}

.comment-submit {
  background-color: #007aff;
  color: white;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
  font-size: 14px;
}
