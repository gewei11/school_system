.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    background-color: #f5f5f5;
  }
  
  .title {
    font-size: 24px;
    margin-bottom: 40px;
  }
  
  .input-group {
    width: 80%;
    margin-bottom: 20px;
  }
  
  .input {
    width: 100%;
    height: 40px;
    padding: 5px 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .button-group {
    display: flex;
    justify-content: space-between;
    width: 80%;
  }
  
  .login-btn,
  .register-btn {
    width: 45%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    border: none;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .login-btn {
    background-color: #1AAD19;
    color: #fff;
  }
  
  .register-btn {
    background-color: #fff;
    border: 1px solid #1AAD19;
    color: #1AAD19;
  }
  