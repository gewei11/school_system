<view class="container">
  <view class="theme-list">
    <button wx:for="{{circleThemes}}" wx:key="title" data-theme="{{item.title}}" bindtap="switchTheme"
      class="{{activeTheme === item.title ? 'active' : ''}}">
      {{item.title}}
    </button>
  </view>

  <view class="category-list">
    <button wx:for="{{dynamicCategories}}" wx:key="title" data-category="{{item.title}}" bindtap="switchCategory"
      class="{{activeCategory === item.title ? 'active' : ''}}">
      {{item.title}}
    </button>
  </view>

  <view class="post-list">
    <button class="add-btn" bindtap="addPost">新增帖子</button>

    <view wx:for="{{details}}" wx:key="id" class="post-item">
      <image src="{{item.avatar}}" class="avatar" />
      <view class="content" bindtap="goToDetail" data-id="{{item.id}}">
        <text>{{item.username}}</text>
        <text>{{item.content}}</text>
        <text>浏览: {{item.views}} 点赞: {{item.likes}}</text>
      </view>
      <button data-id="{{item.id}}" bindtap="editPost">编辑</button>
      <button data-id="{{item.id}}" bindtap="deletePost">删除</button>
    </view>
  </view>
</view>
