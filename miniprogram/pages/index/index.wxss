.container {
  padding: 20rpx;
}

.theme-list, .category-list {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

button {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
}

button.active {
  background-color: #007aff;
  color: white;
}

.post-list .add-btn {
  background-color: #4caf50;
  color: white;
  margin-bottom: 20rpx;
}

.post-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}
