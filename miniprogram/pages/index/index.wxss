/* 一级分类样式 */
.circle-themes {
  display: flex;  /* 使用 flexbox 布局 */
  flex-direction: row;  /* 横向排列 */
  gap: 10px;  /* 标签之间的间隔 */
  padding: 10px;
  background-color: white;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  overflow-x: scroll;  /* 水平滚动 */
  white-space: nowrap;  /* 强制在一行内显示 */
}

/* 一级标签样式 */
.theme {
  padding: 8px 16px;
  background-color: #f0c12b;
  border-radius: 20px;
  font-size: 14px;
  color: #fff;
  cursor: pointer;
}

.theme.active {
  background-color: #e0a927;
}

/* 二级分类样式 */
.dynamic-categories {
  display: flex;  /* 使用 flexbox 布局 */
  flex-direction: row;  /* 横向排列 */
  gap: 10px;  /* 标签之间的间隔 */
  padding: 10px;
  background-color: white;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  overflow-x: scroll;  /* 水平滚动 */
  white-space: nowrap;  /* 强制在一行内显示 */
}

/* 二级标签样式 */
.category {
  padding: 6px 12px;
  background-color: #007aff;
  border-radius: 20px;
  font-size: 12px;
  color: white;
  cursor: pointer;
}

.category.active {
  background-color: #0066cc;
}

/* 详情项样式 */
.details {
  padding: 15px;
  background-color: white;
  overflow-y: auto;  /* 让详情项可以滚动 */
}

/* 详情项具体样式 */
.detail-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 15px;
}

.content {
  flex: 1;
}

.username {
  font-weight: bold;
  margin-bottom: 5px;
}

.content-text {
  font-size: 14px;
  margin-bottom: 10px;
}

.meta text {
  font-size: 12px;
  margin-right: 10px;
}
