/* 基础容器 */
.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 一级分类（主题） */
.theme-list {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding: 20rpx 0;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.theme-list button {
  padding: 24rpx 48rpx;
  font-size: 36rpx;  /* 一级标签大字体 */
  background-color: #e0e0e0;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.theme-list button.active {
  background-color: #4a90e2;
  color: white;
  font-weight: bold;
  transform: scale(1.1);
}

/* 二级分类（动态分类） */
.category-list {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding: 12rpx 0;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.category-list button {
  padding: 14rpx 28rpx;
  font-size: 28rpx;  /* 二级标签较小字体 */
  background-color: #f0f0f0;
  border-radius: 30rpx;
}

.category-list button.active {
  background-color: #4caf50;
  color: white;
  font-weight: bold;
  transform: scale(1.05);
}

/* 新增帖子按钮 */
.add-btn {
  background-color: #52c41a;
  color: white;
  margin-bottom: 20rpx;
  padding: 20rpx 40rpx;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(82, 196, 26, 0.4);
  transition: background-color 0.3s ease;
}

/* 帖子卡片 */
.post-item {
  display: flex;
  align-items: flex-start;
  background-color: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  position: relative;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  object-fit: cover;
  border: 4rpx solid #ddd;
}

/* 帖子内容 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  cursor: pointer;
}

.content .title {
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}

.content .body {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.content .timestamp {
  font-size: 24rpx;
  color: #999;
}

/* 编辑和删除按钮垂直排列 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 10rpx;
}

/* 缩小按钮尺寸 */
.action-buttons button {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

/* 编辑按钮 */
.edit-btn {
  background-color: #1890ff;
  color: white;
}

/* 删除按钮 */
.delete-btn {
  background-color: #ff4d4f;
  color: white;
}

.action-buttons button:active {
  transform: scale(0.95);
}
