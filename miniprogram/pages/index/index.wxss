/* 容器样式 */
.container {
  padding: 20px;
}

/* 一级标题样式 */
.theme-list {
  display: flex;
  flex-wrap: nowrap; /* 防止换行 */
  justify-content: space-around; /* 按钮平均分布 */
  padding: 10px 0;
  border: 2px solid #f0ad4e; /* 添加边框 */
  border-radius: 15px; /* 圆角边框 */
  background-color: #fbe3a9; /* 背景条颜色 */
  margin-bottom: 20px; /* 底部间隔 */
}

.theme-list button {
  font-size: 18px; /* 调整字体大小 */
  color: #f0ad4e; /* 黄色 */
  background-color: transparent;
  border: none;
  text-align: center; /* 居中对齐 */
  padding: 10px;
  width: auto; /* 自动宽度 */
  margin: 0 10px; /* 设置左右间隔 */
}

.theme-list button.selected {
  font-weight: bold;
  color: #ffc107; /* 加深的黄色 */
}

/* 分隔线 */
.separator {
  height: 2px;
  background-color: #000; /* 灰色线条 */
  margin: 10px 0;
}

/* 二级标题样式 */
.category-list {
  display: flex;
  flex-wrap: nowrap; /* 防止换行 */
  justify-content: space-around; /* 按钮平均分布 */
  padding: 10px 0;
  border: 2px solid #007bff; /* 添加边框 */
  border-radius: 15px; /* 圆角边框 */
  background-color: #cce5ff; /* 背景条颜色 */
}

.category-list button {
  font-size: 14px; /* 调整字体大小 */
  color: #007bff; /* 蓝色 */
  background-color: transparent;
  border: none;
  text-align: center; /* 居中对齐 */
  padding: 10px;
  width: auto; /* 自动宽度 */
  margin: 0 10px; /* 设置左右间隔 */
}

.category-list button.selected {
  font-weight: bold;
  color: #0056b3; /* 加深的蓝色 */
}

/* 无数据消息样式 */
.no-data-message {
  text-align: center;
  color: #888;
  margin: 20px 0;
  font-size: 16px;
}

/* 帖子样式 */
.post-item {
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.post-item .username {
  font-weight: bold;
}

.post-item .content {
  margin: 5px 0;
}

.post-item .meta,
.post-item .timestamp {
  font-size: 12px;
  color: #888;
}
